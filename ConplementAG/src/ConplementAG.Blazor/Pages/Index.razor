        <p class="lead px-lg-5 mx-lg-5">@L["GoalToday_ContinuousDeployment"]</p>
        <p class="lead px-lg-5 mx-lg-5">@L["GoalToday_OverviewTechnologies"]</p>
        <br>
        @if (CurrentUser.IsAuthenticated)
        {
            <Badge Color="Color.Success" class="mb-4">
                <h5 class="m-1"> <i class="fas fa-rocket"></i> <strong>ConplementAG</strong> is successfully running!</h5>
            </Badge>
        }
